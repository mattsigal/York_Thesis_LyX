\newcommand{\Abstract}[1]{\gdef\@Abstract{#1}}%
\let\@Abstract\@empty
\def\makeAbstract{%
  \chapter*{Abstract}
  \addcontentsline {toc}{chapter}{Abstract}
  \noindent
  \@Abstract
}

