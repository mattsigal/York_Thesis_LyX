\def\makefrontmatter{%
  \pagestyle {empty}
  \pagenumbering {roman}
  \maketitlepage
  \pagestyle {empty} \makecopyrightpage
  \pagestyle {empty} \makeauthenticitypage
  \setcounter {page} {3}
  \ifx\@Abstract\@empty \else{\makeAbstract} \fi
  \pagestyle {fancy}
  \ifx\@Dedication\@empty \else{\makeDedication} \fi
  \ifx\@Acknowledgements\@empty \else{\makeAcknowledgements} \fi
  \tableofcontents
  \ifthenelse{\boolean{hastables}}{\listoftables}{}
  \ifthenelse{\boolean{hasfigures}}{\listoffigures}{}
  \ifx\@Preface\@empty \else{\makePreface} \fi
  \ifx\@Abbreviations\@empty \else{\makeAbbreviations} \fi
  \newpage
  \pagenumbering {arabic}
  \setcounter {page}{1}
}